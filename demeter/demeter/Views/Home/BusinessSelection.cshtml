    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-4 col-xs-offset-2">
            <a href="/Home/CuisineSelection"><div><img id="table" src="~/Content/assets/img/restaurant_unselected.png" class="img-responsive" style="width: 100%; height: 100%" /></div></a>
        </div>
            <div class="col-lg-4 col-md-4 col-xs-4">
                <a href="/Home/PreferenceHD"><div><img id="hair" src="~/Content/assets/img/hair_unselected.png" class="img-responsive" style="width: 100%; height: 100%; margin-top: -6%" /></div></a>
            </div>
        </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-4 col-xs-offset-2">
            <h4 style="text-align:center; font-weight:bold; margin-left: 0%; margin-top: -7%">Restaurant Business</h4>
        </div>
        <div class="col-lg-4 col-md-4 col-xs-4">
            <h4 style="text-align:center; font-weight:bold; margin-right: 0%; margin-top: -7%">Hairdressing Business</h4>
        </div>
    </div>
</div>

<br />

<div style="text-align:center; margin-top: 0%" class="col-lg-12 col-sm-12 col-md-12">
    <a href="/Home/LandingPage"><div id="prev">BACK TO HOME</div></a>
</div>

<!-- Progress Bar -->
<script>
    $('document').ready(function () {
        var count = 0;
        $('.step').each(function () {
            count++;
        });

        var i = 0;
        //Next
        $('#next').on('click', function () {
            if (count > i + 1) {
                i++;
                $('.active').removeClass('active');
                $('.step').eq(i).addClass('active');
            }
        });
        //Back
        $('#prev').on('click', function () {
            if (i > 0) {
                i--;
                $('.active').removeClass('active');
                $('.step').eq(i).addClass('active');
            }
        });
    });
</script>


