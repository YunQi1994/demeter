    <div class="row">
        <a href="/Home/BusinessSelection"><div class="col-xs-12"><div class="step step2 active" onmouseover="$(this).css('background-color', '#16224D')" onmouseout="$(this).css('background-color', '#D4AF37')" style="background-color:#D4AF37"></div></div></a>
    </div>
</div>

<h3 style="color:black; text-align:center; margin: 2%"><b>Select a Business of Interest</b></h3>

@*Business Selection Icons*@
