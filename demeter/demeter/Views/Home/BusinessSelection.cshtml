<br />
<br />

@*Business Selection Icons*@
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-offset-2">
             <a href="/Home/CuisineSelection"><div><img id="table" src="~/Content/assets/img/foodSelectIcon.png" class="img-responsive" style="width: 100%; height: 100%; margin-left:inherit" /></div></a>
             <h4 style="text-align:center; font-weight:bold">Restaurant Business</h4>
        </div>

        <div class="col-xs-4">
            <a href="/Home/Hairdressing"><div><img id="hair" src="~/Content/assets/img/hairSelectIcon.png" class="img-responsive" style="width: 100%; height: 100%; margin-right: inherit" /></div></a>
            <h4 style="text-align:center; font-weight:bold">Hairdressing Business</h4>
        </div>
    </div>
</div>

<br />

<div style="text-align:center">
    <a href="/Home/Welcome"><div id="prev">BACK</div></a>
    @*<div id="nextDis" class="disabled">NEXT</div>*@
</div>

    <!-- Progress Bar -->
    <script>
        $('document').ready(function () {
            var count = 0;
            $('.step').each(function () {
                count++;

            });

            var i = 0;
            //Next
            $('#next').on('click', function () {
                if (count > i + 1) {
                    i++;
                    $('.active').removeClass('active');
                    $('.step').eq(i).addClass('active');
                }
            });
            //Back
            $('#prev').on('click', function () {
                if (i > 0) {
                    i--;
                    $('.active').removeClass('active');
                    $('.step').eq(i).addClass('active');
                }
            });
        });
    </script>


    <!-- Modernizr runs quickly on page load to detect features -->
    <script src="~/Content/assets/js/modernizr.js"></script>
